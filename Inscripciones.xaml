                <RadioButton Content="NO" Canvas.Left="370" Canvas.Top="560" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" Margin="2"/>

                <!--4.-->
                <Label Content="Fumador/a" Canvas.Left="225" Canvas.Top="584" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" Margin="2"/>
                <RadioButton Content="SI" Canvas.Left="320" Canvas.Top="590" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" Margin="2"/>
                <RadioButton Content="NO" Canvas.Left="370" Canvas.Top="590" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" Margin="2"/>

                <Border Height="2" Background="Gray" Width="650" Canvas.Top="330" Canvas.Left="450" HorizontalAlignment="Center" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5">
                    <Border.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="89.716"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Border.RenderTransform>
                </Border>

                <!--PREGUNTA 6-->
