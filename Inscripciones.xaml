                <!--Imprimir datos-->
                <Button x:Name="BtnImprimir" Content="¡Imprimir planilla!" Canvas.Left="896" Canvas.Top="575" Height="30" Width="120" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="1"/>
