                <RadioButton Content="SI" Canvas.Left="320" Canvas.Top="510" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" Margin="2"/>
                <RadioButton Content="NO" Canvas.Left="370" Canvas.Top="510" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" Margin="2"/>

                <!--2.-->
