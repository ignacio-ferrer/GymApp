                <!--B.-->
                <Label Content="B) Desmayos o Lipotomias: " Canvas.Left="807" Canvas.Top="84" Grid.Column="1"/>
                <RadioButton Content="SI" Canvas.Left="997" Canvas.Top="92" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1"/>
                <RadioButton Content="NO" Canvas.Left="1037" Canvas.Top="92" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1"/>
                <!--C.-->
                <Label Content="C) Dificultad para respirar: " Canvas.Left="1127" Canvas.Top="51" Grid.Column="1"/>
                <RadioButton Content="SI" Canvas.Left="1312" Canvas.Top="60" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" />
                <RadioButton Content="NO" Canvas.Left="1357" Canvas.Top="59" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1"/>
