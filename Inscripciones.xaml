                <RadioButton Content="NO" Canvas.Left="1198" Canvas.Top="333" Grid.Column="1"/>

                <!--Guardar datos-->
                <Button x:Name="BtnGuardar" Content="¡Guardar Datos!" Canvas.Left="782" Canvas.Top="575" Height="30" Width="110" Click="BtnGuardar_Click" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="1"/>

                <Border Height="1" Background="Gray" Width="237" Canvas.Top="611" Canvas.Left="779" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <Border.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
