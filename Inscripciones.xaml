                <RadioButton Content="SI" Canvas.Left="1227" Canvas.Top="91" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1"/>
                <RadioButton Content="NO" Canvas.Left="1267" Canvas.Top="91" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1"/>


                <!--PREGUNTA 7-->
