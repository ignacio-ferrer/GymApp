<Page x:Name="PaginaInscripciones" x:Class="GymApp.Inscripciones"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GymApp"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="Inscripciones">

    <Grid RenderTransformOrigin="0.499,0.469" Background="#FF9294A0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <!--DATOS PERSONALES-->
        <GroupBox Header="Datos Personales" Margin="1,1,5,0" Background="White" VerticalAlignment="Top" Height="336" FontSize="15" Grid.Column="1">
            <Canvas Height="302">
                <!--Seccion Nombre-->
                <Label Content="Nombre: " Canvas.Left="7" Canvas.Top="25" HorizontalAlignment="Left" VerticalAlignment="Top" UseLayoutRounding="False" Grid.Column="1" Margin="0.1,0,0,40"/>
                <TextBox x:Name="BoxNombre" TextWrapping="Wrap" Text="" Width="200" Canvas.Left="75" Canvas.Top="30" HorizontalAlignment="Left" VerticalAlignment="Top" UseLayoutRounding="False" Grid.Column="1" Margin="0.1,0,0,40" TextChanged="BoxNombre_TextChanged"/>

                <!--Seccion Apellido-->
                <Label Content="Apellido: " Canvas.Left="369" Canvas.Top="25" HorizontalAlignment="Left" VerticalAlignment="Top" UseLayoutRounding="False" Grid.Column="1" Margin="0.1,0,0,40" />
                <TextBox x:Name="BoxApellido" TextWrapping="Wrap" Text="" Width="208" Canvas.Left="437" Canvas.Top="29" HorizontalAlignment="Left" VerticalAlignment="Top" UseLayoutRounding="False" Grid.Column="1" Margin="0.1,0,0,40" TextChanged="BoxApellido_TextChanged"/>

                <!--Seccion Edad-->
                <Label Content="Edad: " Canvas.Left="723" Canvas.Top="25" HorizontalAlignment="Left" VerticalAlignment="Top" UseLayoutRounding="False" Grid.Column="1" Margin="0.1,0,0,40" />
                <TextBox x:Name="BoxEdad" TextWrapping="Wrap" Text="" Width="206" Canvas.Left="773" Canvas.Top="30" HorizontalAlignment="Left" VerticalAlignment="Top" UseLayoutRounding="False" Grid.Column="1" Margin="0.1,0,0,40" PreviewTextInput="BoxNumerico_PreviewTextInput"/>

                <!--Seccion DNI-->
                <Label Content="DNI: " Canvas.Left="1029.1" Canvas.Top="24" HorizontalAlignment="Left" VerticalAlignment="Top" UseLayoutRounding="False" Grid.Column="1" />
                <TextBox x:Name="BoxDni" TextWrapping="Wrap" Text="" Width="206" Canvas.Left="1068.1" Canvas.Top="26" HorizontalAlignment="Left" VerticalAlignment="Top" UseLayoutRounding="False" Grid.Column="1" PreviewTextInput="BoxNumerico_PreviewTextInput"/>

                <!--Seccion Sexo-->
                <Label Content="Sexo: " Canvas.Left="1315.6" Canvas.Top="24" HorizontalAlignment="Left" VerticalAlignment="Top" UseLayoutRounding="False" Grid.Column="1" />
                <RadioButton x:Name="BtnHombre" Content="Hombre" Canvas.Left="1364.6" Canvas.Top="31.666" HorizontalAlignment="Left" VerticalAlignment="Top" UseLayoutRounding="False" Grid.Column="1" GroupName="Sexo" />
                <RadioButton x:Name="BtnMujer" Content="Mujer" Canvas.Left="1454.1" Canvas.Top="31.999" HorizontalAlignment="Left" VerticalAlignment="Top" UseLayoutRounding="False" Grid.Column="1" GroupName="Sexo"/>

                <!--Seccion Fecha-->
                <Label Content="Fecha de nacimiento: " Canvas.Left="8" Canvas.Top="110" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="1" />
                <DatePicker x:Name="DateCumple" Canvas.Left="156" Canvas.Top="108" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top"/>

                <!--Seccion Direcc-->
                <Label Content="Direccion: " Canvas.Left="370" Canvas.Top="110" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" />
                <TextBox x:Name="BoxDirec" TextWrapping="Wrap" Text="" Width="206" Canvas.Left="444" Canvas.Top="115" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1"/>

                <!--Seccion Localidad-->
                <Label Content="Localidad: " Canvas.Left="720" Canvas.Top="110" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" />
                <TextBox x:Name="BoxLocalidad" TextWrapping="Wrap" Text="" Width="206" Canvas.Left="796" Canvas.Top="115" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" TextChanged="BoxLocalidad_TextChanged"/>

                <!--Seccion C.P-->
                <Label Content="Codigo Postal: " Canvas.Left="1095" Canvas.Top="110" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" />
                <TextBox x:Name="BoxCodigoPostal" TextWrapping="Wrap" Text="" Width="206" Canvas.Left="1197" Canvas.Top="115" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" PreviewTextInput="BoxNumerico_PreviewTextInput"/>

                <!--Seccion Tel-->
                <Label Content="Telefono: " Canvas.Left="11" Canvas.Top="190" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="1" />
                <TextBox x:Name="BoxTel" TextWrapping="Wrap" Text="" Width="206" Canvas.Left="80" Canvas.Top="190" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="1" PreviewTextInput="BoxNumerico_PreviewTextInput"/>

                <!--Seccion Contacto-Emergencia-->
                <Label Content="Contacto de emergencia: " Canvas.Left="355" Canvas.Top="190" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" />
                <TextBox x:Name="BoxContactoEmergencia" TextWrapping="Wrap" Text="" Width="206" Canvas.Left="528" Canvas.Top="190" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" PreviewTextInput="BoxNumerico_PreviewTextInput"/>

                <!--Seccion Mail-->
                <Label Content="Correo Electronico: " Canvas.Left="757" Canvas.Top="190" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" />
                <TextBox x:Name="BoxMail" TextWrapping="Wrap" Text="" Width="206" Canvas.Left="892" Canvas.Top="190" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1"/>

                <!--Seccion Fecha Inscripcion-->
                <Label Canvas.Left="1128" Canvas.Top="190" Content="Fecha de inscripcion: " HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" />
                <DatePicker x:Name="DateInscripcion" Canvas.Left="1273" Canvas.Top="186" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1"/>
            </Canvas>
        </GroupBox>

        <!--FICHA MEDICA-->
        <GroupBox Header="Ficha Medica" Margin="3,366,2,0" Background="White" VerticalAlignment="Top" Height="696" FontSize="15" Grid.Column="1">
            <Canvas Height="670" RenderTransformOrigin="0.393,-0.048">
                <!--PREGUNTA 1-->
                <Label Content="1. ¿Ha tenido o tiene alguna lesion osea? " HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="7" Canvas.Top="6" Grid.Column="1" Margin="5"/>
                <Label Content="En caso de afirmativo , describalo brevemente: " Canvas.Left="35" Canvas.Top="39" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" Margin="5"/>
                <TextBox x:Name="BoxMedicoUno" Canvas.Left="23" TextWrapping="Wrap" Text="" Canvas.Top="81" Width="400" HorizontalAlignment="Left" VerticalAlignment="Top" Background="White" Grid.Column="1" Margin="5"/>
                <RadioButton x:Name="BtnSiUno" Content="SI" Canvas.Left="431" Canvas.Top="116" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" />
                <RadioButton x:Name="BtnNoUno" Content="NO" Canvas.Left="486" Canvas.Top="116" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <Border Height="2" Background="Gray" Width="1911" Canvas.Top="139" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" Canvas.Left="-3"/>

                <!--PREGUNTA 2-->
                <Label Content="2. ¿Ha tenido o tiene alguna lesion muscular? " Canvas.Left="13" Canvas.Top="145" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" Margin="5"/>
                <Label Content="En caso de afirmativo , describalo brevemente: " Canvas.Left="38" Canvas.Top="177" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" Margin="5"/>
                <TextBox x:Name="BoxMedicoDos" Canvas.Left="36" TextWrapping="Wrap" Text="" Canvas.Top="215" Width="400" Background="White" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" Margin="5"/>
                <RadioButton x:Name="BtnSiDos" Content="SI" Canvas.Left="440" Canvas.Top="260" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" />
                <RadioButton x:Name="BtnNoDos" Content="NO" Canvas.Left="494" Canvas.Top="260" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1"/>
                <Border Height="2" Background="Gray" Width="778" Canvas.Top="426" HorizontalAlignment="Left" VerticalAlignment="Center" Canvas.Left="-3" Grid.Column="1"/>

                <!--PREGUNTA 3-->
                <Label Content="3. ¿Padece alguna enfermedad cardiovascular? " Canvas.Left="12" Canvas.Top="293" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" Margin="5"/>
                <Label Content="En caso de afirmativo , describalo brevemente: " Canvas.Left="49" Canvas.Top="334" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" Margin="5"/>
                <TextBox x:Name="BoxMedicoTres" Canvas.Left="55" TextWrapping="Wrap" Text="" Canvas.Top="380" Width="400" Background="White" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" Margin="5"/>
                <RadioButton x:Name="BtnSiTres" Content="SI" Canvas.Left="470" Canvas.Top="402" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="1"/>
                <RadioButton x:Name="BtnNoTres" Content="NO" Canvas.Left="523" Canvas.Top="402" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="1"/>
                <Border Height="2" Background="Gray" Width="782" Canvas.Top="285" HorizontalAlignment="Left" VerticalAlignment="Center" Canvas.Left="-6" Grid.Column="1"/>

                <!--PREGUNTA 4-->
                <Label Content="4. ¿Se afixia con facilidad al realizar ejercicio fisico? " Canvas.Left="8" Canvas.Top="429" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" Margin="5"/>
                <RadioButton x:Name="BtnSiCuatro" Content="SI" Canvas.Left="358" Canvas.Top="476" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1"/>
                <RadioButton x:Name="BtnNoCuatro" Content="NO" Canvas.Left="410" Canvas.Top="476" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1"/>
                <Border Height="2" Background="Gray" Width="782" Canvas.Top="501" Canvas.Left="-6" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1"/>

                <!--PREGUNTA 5-->
                <Label Content="5. ¿Es usted? " Canvas.Left="9" Canvas.Top="506" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" Margin="5"/>

                <!--1.-->
                <Label Content="Asmatico/a" Canvas.Left="196" Canvas.Top="536" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1"/>
                <RadioButton x:Name="BtnAsmatico" Content="SI" Canvas.Left="284" Canvas.Top="543" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1"/>
                <RadioButton x:Name="BtnNoCincoA" Content="NO" Canvas.Left="329" Canvas.Top="543" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1"/>

                <!--2.-->
                <Label Content="Epileptico/a" Canvas.Left="196" Canvas.Top="570" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1"/>
                <RadioButton x:Name="BtnEpileptico" Content="SI" Canvas.Left="289" Canvas.Top="576" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1"/>
                <RadioButton x:Name="BtnNoCincoE" Content="NO" Canvas.Left="327" Canvas.Top="576" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1"/>

                <!--3.-->
                <Label Content="Diabetico/a" Canvas.Left="420" Canvas.Top="537" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1"/>
                <RadioButton x:Name="BtnDiabetico" Content="SI" Canvas.Left="509" Canvas.Top="546" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" />
                <RadioButton x:Name="BtnNoCincoD" Content="NO" Canvas.Left="549" Canvas.Top="546" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1"/>

                <!--4.-->
                <Label Content="Fumador/a" Canvas.Left="419" Canvas.Top="569" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1"/>
                <RadioButton x:Name="BtnFumador" Content="SI" Canvas.Left="504" Canvas.Top="574" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1"/>
                <RadioButton x:Name="BtnNoCincoF" Content="NO" Canvas.Left="549" Canvas.Top="574" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1"/>

                <Border Height="2" Background="Gray" Width="672" Canvas.Top="333" Canvas.Left="439" HorizontalAlignment="Center" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5">
                    <Border.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="89.716"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Border.RenderTransform>
                </Border>

                <!--PREGUNTA 6-->
                <Label Content="6. Indique si ha tenido alguno de estos sintomas al realizar esfuerzos o ejercicio fisico: " Canvas.Left="785" Canvas.Top="11" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1"/>
                <!--A.-->
                <Label Content="A) Mareos: " Canvas.Left="807" Canvas.Top="49" Grid.Column="1"/>
                <RadioButton x:Name="BtnMareos" Content="SI" Canvas.Left="891" Canvas.Top="56" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1"/>
                <RadioButton x:Name="BtnNoSeisM" Content="NO" Canvas.Left="931" Canvas.Top="56" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1"/>
                <!--B.-->
                <Label Content="B) Desmayos o Lipotomias: " Canvas.Left="807" Canvas.Top="84" Grid.Column="1"/>
                <RadioButton x:Name="BtnDesmayos" Content="SI" Canvas.Left="997" Canvas.Top="92" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1"/>
                <RadioButton x:Name="BtnNoSeisD" Content="NO" Canvas.Left="1037" Canvas.Top="92" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1"/>
                <!--C.-->
                <Label Content="C) Dificultad para respirar: " Canvas.Left="1127" Canvas.Top="51" Grid.Column="1"/>
                <RadioButton x:Name="BtnRespirar" Content="SI" Canvas.Left="1312" Canvas.Top="60" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" />
                <RadioButton x:Name="BtnNoSeisR" Content="NO" Canvas.Left="1357" Canvas.Top="59" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1"/>
                <!--D.-->
                <Label Content="D) Nauseas: " Canvas.Left="1127" Canvas.Top="81" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1"/>
                <RadioButton x:Name="BtnNauseas" Content="SI" Canvas.Left="1227" Canvas.Top="91" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1"/>
                <RadioButton x:Name="BtnNoSeisN" Content="NO" Canvas.Left="1267" Canvas.Top="91" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1"/>


                <!--PREGUNTA 7-->
                <Label Content="7. ¿Padece de anemia en la actualidad?" Canvas.Left="783" Canvas.Top="144" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" Margin="2"/>
                <RadioButton x:Name="BtnSiSiete" Content="SI" Canvas.Left="1060" Canvas.Top="181" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="1" />
                <RadioButton x:Name="BtnNoSiete" Content="NO" Canvas.Left="1115" Canvas.Top="181" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="1"/>

                <!--PREGUNTA 8-->
                <Label Content="8. ¿Esta ud. Embarazada o sospecha estarlo?" Canvas.Left="784" Canvas.Top="211" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <RadioButton x:Name="BtnSiOcho" Content="SI" Canvas.Left="1065" Canvas.Top="265" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <RadioButton x:Name="BtnNoOcho" Content="NO" Canvas.Left="1112" Canvas.Top="265" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top"/>

                <!--PREGUNTA 9-->
                <Label Content="9. ¿Ha practicado o practica alguna actividad deportiva?" Canvas.Left="781" Canvas.Top="297" Grid.Column="1"/>
                <RadioButton x:Name="BtnSiNueve" Content="SI" Canvas.Left="1152" Canvas.Top="333" Grid.Column="1"/>
                <RadioButton x:Name="BtnNoNueve" Content="NO" Canvas.Left="1198" Canvas.Top="333" Grid.Column="1"/>

                <!--Guardar datos-->
                <Button x:Name="BtnGuardar" Content="¡Guardar Datos!" Canvas.Left="1299" Canvas.Top="582" Height="30" Width="110" Click="BtnGuardar_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1"/>

                <Border Height="2" Background="#FFEAEAEA" Width="237" Canvas.Top="618" Canvas.Left="1302" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <Border.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="180"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Border.RenderTransform>
                </Border>

                <!--Imprimir datos-->
                <Button x:Name="BtnImprimir" Content="¡Imprimir planilla!" Canvas.Left="1420" Canvas.Top="582" Height="30" Width="120" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1"/>
                <Border Height="2" Background="Gray" Width="1136" Canvas.Top="202" Canvas.Left="774" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <Border.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="180"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Border.RenderTransform>
                </Border>
                <Border Height="2" Background="Gray" Width="1134" Canvas.Top="285" Canvas.Left="776" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <Border.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="180"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Border.RenderTransform>
                </Border>

                <Border Height="2" Background="Gray" Width="1133" Canvas.Top="355" Canvas.Left="776" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <Border.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="180"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Border.RenderTransform>
                </Border>

                <GroupBox Height="267" Header="Formas de pago" Width="500" Canvas.Left="780" Canvas.Top="355" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <Canvas Margin="2,-5,-2,-1">
                        <!--TARJETA-->
                        <Label Content="N° Tarjeta:" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Top" Grid.Column="1"/>
                        <TextBox x:Name="BoxTarjeta" Canvas.Left="15" TextWrapping="Wrap" Text="" Canvas.Top="36" Width="145" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5" Grid.Column="1"/>

                        <!--CADUCIDAD-->
                        <Label Content="Caducidad:"  Canvas.Top="70" RenderTransformOrigin="-0.378,-0.699" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5" Grid.Column="1"/>
                        <TextBox x:Name="BoxCaducidadUno" Canvas.Left="10" TextWrapping="Wrap" Text="" Canvas.Top="105" Width="50" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5" Grid.Column="1"/>
                        <TextBox x:Name="BoxCaducidadDos" Canvas.Left="70" TextWrapping="Wrap" Text="" Canvas.Top="105" Width="50" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5" Grid.Column="1"/>

                        <!--CODIGO SEGURIDAD-->
                        <Label Content="Cod. Seguridad:"  Canvas.Top="140" Margin="5" Grid.Column="1"/>
                        <PasswordBox x:Name="BoxCodigoSeguridad" Canvas.Left="17" Canvas.Top="180" Width="65" Margin="5" Grid.Column="1"/>

                        <!--EFECTIVO-->
                        <RadioButton x:Name="BtnEfectivo" Content="Efectivo" Canvas.Left="250" Canvas.Top="16"/>

                        <!--$ CUOTA-->
                        <Label Content="Valor de cuota:" Canvas.Left="240" Canvas.Top="76" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <TextBox x:Name="BoxValorCuota" Canvas.Left="348" TextWrapping="Wrap" Text="" Canvas.Top="80" Width="120" HorizontalAlignment="Left" VerticalAlignment="Center"/>

                    </Canvas>
                </GroupBox>

                <Border Height="1" Background="Gray" Width="230" Canvas.Top="491" Canvas.Left="909" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <Border.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="90"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Border.RenderTransform>
                </Border>
                <Border Height="1" Background="#FFEAEAEA" Width="23" Canvas.Top="597" Canvas.Left="1403" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <Border.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="270"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Border.RenderTransform>
                </Border>
            </Canvas>
        </GroupBox>
    </Grid>
</Page>
