                <RadioButton Content="NO" Canvas.Left="519" Canvas.Top="192" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" Margin="5"/>
                <Border Height="2" Background="Gray" Width="769" Canvas.Top="426" HorizontalAlignment="Left" VerticalAlignment="Center" Canvas.Left="6" Grid.Column="1"/>

                <!--PREGUNTA 3-->
                <Label Content="3. ¿Padece alguna enfermedad cardiovascular? " Canvas.Left="12" Canvas.Top="293" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" Margin="5"/>
                <Label Content="En caso de afirmativo , describalo brevemente: " Canvas.Left="49" Canvas.Top="334" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" Margin="5"/>
                <TextBox Canvas.Left="55" TextWrapping="Wrap" Text="" Canvas.Top="380" Width="400" Background="White" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" Margin="5"/>
                <RadioButton Content="SI" Canvas.Left="477" Canvas.Top="317" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" Margin="5"/>
                <RadioButton Content="NO" Canvas.Left="530" Canvas.Top="317" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" Margin="5"/>
                <Border Height="2" Background="Gray" Width="770" Canvas.Top="285" HorizontalAlignment="Left" VerticalAlignment="Center" Canvas.Left="6" Grid.Column="1"/>

                <!--PREGUNTA 4-->
                <Label Content="4. ¿Se afixia con facilidad al realizar ejercicio fisico? " Canvas.Left="8" Canvas.Top="429" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" Margin="5"/>
                <RadioButton Content="SI" Canvas.Left="473" Canvas.Top="444" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" Margin="5"/>
                <RadioButton Content="NO" Canvas.Left="526" Canvas.Top="444" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" Margin="5"/>
                <Border Height="2" Background="Gray" Width="769" Canvas.Top="501" Canvas.Left="7" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1"/>

