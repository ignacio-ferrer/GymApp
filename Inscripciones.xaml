<Page x:Name="PaginaInscripciones" x:Class="GymApp.Inscripciones"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GymApp"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="Inscripciones">

    <Grid RenderTransformOrigin="0.499,0.469" Background="#FF9294A0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <!--DATOS PERSONALES-->
        <GroupBox Header="Datos Personales" Margin="1,1,5,0" Background="White" VerticalAlignment="Top" Height="336" FontSize="15" Grid.Column="1">
            <Canvas Height="302">
                <!--Seccion Nombre-->
                <Label Content="Nombre: " Canvas.Left="7" Canvas.Top="25" HorizontalAlignment="Left" VerticalAlignment="Top" UseLayoutRounding="False" Grid.Column="1" Margin="0.1,0,0,40"/>
                <TextBox x:Name="BoxNombre" TextWrapping="Wrap" Text="" Width="200" Canvas.Left="75" Canvas.Top="30" HorizontalAlignment="Left" VerticalAlignment="Top" UseLayoutRounding="False" Grid.Column="1" Margin="0.1,0,0,40" TextChanged="BoxNombre_TextChanged"/>

                <!--Seccion Apellido-->
                <Label Content="Apellido: " Canvas.Left="369" Canvas.Top="25" HorizontalAlignment="Left" VerticalAlignment="Top" UseLayoutRounding="False" Grid.Column="1" Margin="0.1,0,0,40" />
                <TextBox x:Name="BoxApellido" TextWrapping="Wrap" Text="" Width="208" Canvas.Left="437" Canvas.Top="29" HorizontalAlignment="Left" VerticalAlignment="Top" UseLayoutRounding="False" Grid.Column="1" Margin="0.1,0,0,40" TextChanged="BoxApellido_TextChanged"/>

                <!--Seccion Edad-->
                <Label Content="Edad: " Canvas.Left="723" Canvas.Top="25" HorizontalAlignment="Left" VerticalAlignment="Top" UseLayoutRounding="False" Grid.Column="1" Margin="0.1,0,0,40" />
                <TextBox x:Name="BoxEdad" TextWrapping="Wrap" Text="" Width="206" Canvas.Left="773" Canvas.Top="30" HorizontalAlignment="Left" VerticalAlignment="Top" UseLayoutRounding="False" Grid.Column="1" Margin="0.1,0,0,40" PreviewTextInput="BoxNumerico_PreviewTextInput"/>

                <!--Seccion DNI-->
                <Label Content="DNI: " Canvas.Left="1029.1" Canvas.Top="24" HorizontalAlignment="Left" VerticalAlignment="Top" UseLayoutRounding="False" Grid.Column="1" />
                <TextBox x:Name="BoxDni" TextWrapping="Wrap" Text="" Width="206" Canvas.Left="1068.1" Canvas.Top="26" HorizontalAlignment="Left" VerticalAlignment="Top" UseLayoutRounding="False" Grid.Column="1" PreviewTextInput="BoxNumerico_PreviewTextInput"/>

                <!--Seccion Sexo-->
                <Label Content="Sexo: " Canvas.Left="1315.6" Canvas.Top="24" HorizontalAlignment="Left" VerticalAlignment="Top" UseLayoutRounding="False" Grid.Column="1" />
                <RadioButton x:Name="BtnHombre" Content="Hombre" Canvas.Left="1364.6" Canvas.Top="31.666" HorizontalAlignment="Left" VerticalAlignment="Top" UseLayoutRounding="False" Grid.Column="1" GroupName="Sexo" />
                <RadioButton x:Name="BtnMujer" Content="Mujer" Canvas.Left="1454.1" Canvas.Top="31.999" HorizontalAlignment="Left" VerticalAlignment="Top" UseLayoutRounding="False" Grid.Column="1" GroupName="Sexo"/>

                <!--Seccion Fecha-->
                <Label Content="Fecha de nacimiento: " Canvas.Left="8" Canvas.Top="110" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="1" />
                <DatePicker x:Name="DateCumple" Canvas.Left="156" Canvas.Top="108" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" />

                <!--Seccion Direcc-->
                <Label Content="Direccion: " Canvas.Left="370" Canvas.Top="110" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" />
                <TextBox x:Name="BoxDirec" TextWrapping="Wrap" Text="" Width="206" Canvas.Left="444" Canvas.Top="115" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1"/>

                <!--Seccion Localidad-->
                <Label Content="Localidad: " Canvas.Left="720" Canvas.Top="110" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" />
                <TextBox x:Name="BoxLocalidad" TextWrapping="Wrap" Text="" Width="206" Canvas.Left="796" Canvas.Top="115" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" TextChanged="BoxLocalidad_TextChanged"/>

                <!--Seccion C.P-->
                <Label Content="Codigo Postal: " Canvas.Left="1095" Canvas.Top="110" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" />
                <TextBox x:Name="BoxCodigoPostal" TextWrapping="Wrap" Text="" Width="206" Canvas.Left="1197" Canvas.Top="115" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" PreviewTextInput="BoxNumerico_PreviewTextInput"/>

                <!--Seccion Tel-->
                <Label Content="Telefono: " Canvas.Left="11" Canvas.Top="190" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="1" />
                <TextBox x:Name="BoxTel" TextWrapping="Wrap" Text="" Width="206" Canvas.Left="80" Canvas.Top="190" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="1" PreviewTextInput="BoxNumerico_PreviewTextInput"/>

                <!--Seccion Contacto-Emergencia-->
                <Label Content="Contacto de emergencia: " Canvas.Left="355" Canvas.Top="190" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" />
                <TextBox x:Name="BoxContactoEmergencia" TextWrapping="Wrap" Text="" Width="206" Canvas.Left="528" Canvas.Top="190" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" PreviewTextInput="BoxNumerico_PreviewTextInput"/>

                <!--Seccion Mail-->
                <Label Content="Correo Electronico: " Canvas.Left="757" Canvas.Top="190" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" />
                <TextBox x:Name="BoxMail" TextWrapping="Wrap" Text="" Width="206" Canvas.Left="892" Canvas.Top="190" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1"/>

                <!--Seccion Fecha Inscripcion-->
                <Label Canvas.Left="1128" Canvas.Top="190" Content="Fecha de inscripcion: " HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" />
                <DatePicker x:Name="DateInscripcion" Canvas.Left="1273" Canvas.Top="189" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1"/>
            </Canvas>
        </GroupBox>

        <!--FICHA MEDICA-->
        <GroupBox Header="Ficha Medica" Margin="3,366,2,0" Background="White" VerticalAlignment="Top" Height="696" FontSize="15" Grid.Column="1">
            <Canvas Height="670" RenderTransformOrigin="0.393,-0.048">
                <!--PREGUNTA 1-->
                <Label Content="1. ¿Ha tenido o tiene alguna lesion osea? " HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="7" Canvas.Top="6" Grid.Column="1" Margin="5"/>
                <Label Content="En caso de afirmativo , describalo brevemente: " Canvas.Left="35" Canvas.Top="39" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" Margin="5"/>
                <TextBox Canvas.Left="23" TextWrapping="Wrap" Text="" Canvas.Top="81" Width="400" HorizontalAlignment="Left" VerticalAlignment="Top" Background="White" Grid.Column="1" Margin="5"/>
                <RadioButton Content="SI" Canvas.Left="472" Canvas.Top="35" Grid.Column="1" Margin="5" />
                <RadioButton Content="NO" Canvas.Left="527" Canvas.Top="35" Grid.Column="1" Margin="5"/>
                <Border Height="2" Background="Gray" Width="1903" Canvas.Top="139" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" Canvas.Left="5"/>

